<div class="page-header">
  <h3><%= @album.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Musician</dt>
      <dd><%= @album.musician_id %></dd>

      <dt>Year</dt>
      <dd><%= @album.year %></dd>

      <dt>Name</dt>
      <dd><%= @album.name %></dd>
    </dl>

    <dl class="dl-horizontal">

          <dt>Albums You Might Like</dt>
          <% Album.where({:year => @album.year}).where.not(:name => @album.name).each do |album| %>
          <a href="/albums/<%= album.id %>">
            <dd><%= album.name %>
        </dd>
        </a>
          <% end %>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/albums" class="btn btn-primary">
        Back
      </a>
      <a href="/albums/<%= @album.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_album/<%= @album.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
